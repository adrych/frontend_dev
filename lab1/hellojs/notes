var lib = {}

lib.module = (function() {

    var MyInterface = {
        message : priv2 + "World",
        counter : function() {
            return ++c;
        },
        sayHello: function(name) {
            return "Hello " + name;
        }
    var c = 0;
    var priv2 = "Hello";
    return MyInterface; 
    };
})();

